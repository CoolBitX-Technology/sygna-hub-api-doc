{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0",
    "title": "Sygna Hub API",
    "description": "",
    "contact": {}
  },
  "servers": [
    {
      "url": "https://dev-api.gate.sygna.io/v1",
      "description": "Bridge develope server"
    }
  ],
  "paths": {
    "/users": {
      "$ref": "./paths/users.json"
    },
    "/customers": {
      "$ref": "./paths/customers.json"
    },
    "/customers/{id}": {
      "$ref": "./paths/customer.json"
    },
    "/services": {
      "$ref": "./paths/services.json"
    },
    "/transactions": {
      "$ref": "./paths/transactions.json"
    },
    "/transactions/{id}": {
      "$ref": "./paths/transaction.json"
    },
    "/transactions/confirm": {
      "$ref": "./paths/transactions_confirm.json"
    },
    "/transactions/permission": {
      "$ref": "./paths/transactions_permission.json"
    },
    "/transactions/txid": {
      "$ref": "./paths/transactions_txid.json"
    }
  },
  "tags": [
    {
      "name": "Hub"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "customer": {
        "$ref": "./schemas/customers/get/customer.json"
      },
      "customers": {
        "$ref": "./schemas/customers/get/customers.json"
      },
      "users": {
        "$ref": "./schemas/users/get/users.json"
      },
      "services": {
        "$ref": "./schemas/services/get/services.json"
      }
    }
  }
}