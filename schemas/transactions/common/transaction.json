{
  "title": "transaction",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "customer_id": {
      "$ref": "../../common/id.json"
    },
    "amount": {
      "type": "string",
      "minLength": 1
    },
    "currency_id": {
      "$ref": "../../common/currency_id.json"
    },
    "originator": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../common/id.json"
      }
    },
    "beneficiary": {
      "type": "object",
      "properties": {
        "customer_type": {
          "$ref": "../../common/customer_type.json"
        },
        "vasp_code": {
          "$ref": "../../common/vasp_code.json"
        },
        "private_info": {
          "type": "object",
          "oneOf": [
            {
              "properties": {
                "first_name": {
                  "type": "string",
                  "minLength": 1
                },
                "last_name": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "first_name",
                "last_name"
              ]
            },
            {
              "properties": {
                "legal_name": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "legal_name"
              ]
            }
          ]
        },
        "addrs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "address": {
                "type": "string",
                "minItems": 1
              },
              "extra_info": {
                "type": "object"
              }
            },
            "required": [
              "address"
            ]
          }
        }
      },
      "required": [
        "customer_type",
        "vasp_code",
        "private_info",
        "addrs"
      ]
    }
  },
  "required": [
    "amount",
    "currency_id",
    "originator",
    "beneficiary"
  ]
}